<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Alli's Boggle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
</head>
<body>
  <div class="row boggle-main">
    <div class="overlay"></div>
    <button class="btn btn-lg btn-default btn-new-game">Start New Game</button>

    <div class="col-md-12">
      <h1 class="text-center boggle-title">âœ¨ Boggle! âœ¨</h1>
    </div>

    <div class="col-md-2 col-md-offset-1">
      <h3 id="boggle-timer" class="timer-text">3:00</h3>
    </div>

    <div class="col-xs-12 col-md-4 boggle-board-container">
      <div class="row boggle-board">
        <% letters.forEach(function(letter, index) { %>
          <div class="col-xs-3 text-center boggle-square">
            <h3 class="boggle-letter" data-board-index="<%- index %>"><%- letter %></h3>
          </div>
        <% }) %>
      </div>
    </div>

    <div class="col-xs-12 col-md-4 boggle-form">
      <form>
        <div class="form-group">
          <label for="word" class="control-label">Start typing... Then hit enter!</label>
          <input type="text" id="word" class="form-control text-uppercase" name="word" placeholder="Bleep" aria-describedby="invalidEntry" autofocus>
          <span id="invalidEntry" class="help-block hidden">ðŸ™… Not a valid entry.</span>
        </div>
        <input type="submit" class="btn btn-default submit-btn">
      </form>

      <div class="boggle-word-bank">
        <h4>Word Bank <span class="point-tracker pull-right">0</span></h4>

        <hr class="divider">
        <div class="submitted-words"></div>
      </div>
    </div>

    <div class="col-md-9 col-md-offset-1 game-over hidden">
      <h4>Answers</h4>
      <hr class="divider">
      <div class="all-words"></div>
    </div>

  </div>

<script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
<script type="text/javascript" src="/js/bundle.js"></script>

</body>
</html>